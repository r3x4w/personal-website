---
import MainLayout from '../../layouts/MainLayout.astro';
const products = await Astro.glob('./*.mdx');
const newestProducts = products.sort((firstProduct, secondProduct) => {
  return (
    new Date(secondProduct.frontmatter.pubDate) -
    new Date(firstProduct.frontmatter.pubDate)
  );
});
---

<MainLayout title='محصولات من'>
  <section class='pt-12'>
    <div class='pb-28 text-center'>
      <h1 class='pb-4 text-3xl text-zinc-950'>محصولات</h1>
      <p>محصولاتی که توسط من طراحی و توسعه داده شده</p>
    </div>
    <div
      class='grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8'>
      {
        newestProducts.map((product) => {
          return (
            <div class='group relative'>
              <div class='aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-xl bg-gray-200 lg:aspect-none group-hover:opacity-75 dark:bg-zinc-900 lg:h-72'>
                <img
                  src={
                    product.frontmatter.image.url
                      ? `/images/products/${product.frontmatter.image.url}`
                      : '/images/no-img-placeholder.png'
                  }
                  alt={product.frontmatter.image.alt || ''}
                  class='h-full w-full object-cover object-center lg:h-full lg:w-full'
                  onerror="this.onerror=null; this.src='/images/no-img-placeholder.png'"
                  loading='lazy'
                />
              </div>
              <div class='mt-4 flex justify-between'>
                <h2 class='break-words text-sm font-medium text-zinc-700'>
                  <a
                    href={product.frontmatter.productUrl}
                    class='text-inherit hover:no-underline'
                    target='_blank'>
                    <span aria-hidden='true' class='absolute inset-0' />
                    {product.frontmatter.title || 'بدون عنوان'}
                  </a>
                </h2>
                <p class='text-sm font-medium text-zinc-900'>
                  {product.frontmatter.price} تومان
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </section>
</MainLayout>
