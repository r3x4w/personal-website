---
const { title, start, end } = Astro.props;
---

<ul
  class='pr-[0.85rem] border-r-2 border-zinc-300 mr-[0.55rem] flex flex-col-reverse'>
  <li
    class="mb-4 before:content-[''] before:w-4 before:h-4 before:bg-zinc-800 before:absolute before:rounded-full before:-mr-[1.4rem] before:-ml-[1.4rem] before:shadow-[0_0_0_0.1875rem] before:shadow-zinc-800/25">
    <div class='relative top-[-0.35rem] pr-4 break-words'>
      <div class='text-xl font-semibold text-zinc-700 mb-2'>
        {title}
      </div>
      <div class='text-sm text-zinc-500'>
        {start} — {end || 'حال حاضر'}
      </div>
      <p>
        <slot />
      </p>
    </div>
  </li>
</ul>
