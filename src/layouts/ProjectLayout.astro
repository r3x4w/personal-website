---
import MainLayout from './MainLayout.astro';
const { title, description, image, previewUrl, meta } = Astro.props.frontmatter;
---

<MainLayout title={meta.title} description={meta.description}>
  <div
    class='flex flex-col gap-6 sm:flex-row sm:justify-around sm:pt-8 lg:justify-between'>
    <div class='space-y-4 sm:w-1/2 lg:w-1/3'>
      <h1>{title}</h1>
      <slot />
      {
        previewUrl && (
          <div class='block'>
            <a href={previewUrl} class='external-link' target='_blank'>
              پیش نمایش زنده
            </a>
          </div>
        )
      }
    </div>
    <img
      src={image.url
        ? `/images/projects/${image.url}`
        : '/images/no-img-placeholder.png'}
      alt={image.alt}
      loading='lazy'
      class='h-full rounded-xl bg-[#e6e6e6] dark:bg-zinc-900 sm:w-1/2 lg:w-3/5'
      onerror="this.onerror=null; this.src='/images/no-img-placeholder.png'"
    />
  </div>
</MainLayout>
